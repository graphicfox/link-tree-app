<main class="relative flex flex-col items-center w-full min-h-screen p-[5%]" style="background-color: <%= data.backgroundColor %>;color: <%= data.color %>;">
    <section class="absolute top-0 h-1/3 w-full">
        <svg class="absolute top-[-10%] md:top-[-20%] min-w-[800px]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="<%= data.highlightColor %>" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,154.7C384,149,480,107,576,112C672,117,768,171,864,197.3C960,224,1056,224,1152,218.7C1248,213,1344,203,1392,197.3L1440,192L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
        </svg>
        <svg class="absolute top-0 opacity-50 min-w-[800px]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="<%= data.highlightColor %>" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,154.7C384,149,480,107,576,112C672,117,768,171,864,197.3C960,224,1056,224,1152,218.7C1248,213,1344,203,1392,197.3L1440,192L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
        </svg>
    </section>
    <section class="flex flex-col items-center w-full max-w-[600px] mb-8 z-1">
        <img src="<%= data.profileImage %>" alt="<%= data.name %>" class="max-w-48 aspect-square rounded-full border-12 drop-shadow-xl object-cover mb-8" style="border-color: <%= data.highlightColor %>">
        <h1 class="font-extrabold text-center text-4xl mb-4" style="color: <%= data.highlightColor %>"><%= data.name %></h1>
        <p class="text-center"><%= data.description %></p>
    </section>
    <section class="w-full max-w-[400px] z-1">
        <style>li:hover {background-color: <%= data.highlightColor %>}</style>
        <%- include("./LinkList.ejs", {links: data.links}) %>
    </section>
</main>